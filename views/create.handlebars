<head>
  <link rel="stylesheet" href="/styles/create.css" media="screen" title="no title" charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<header>

  <h1> Add a Park</h1>

</header>

<body>

  <div class="card-body">

    <form id="newPark" action="create" method="POST">

      <div class="form-group">
        <label for="">Park Name</label>
        <input type="text" class="form-control" id="name" name= "park_name"  placeholder="">
      </div>

      <div class="form-group">
        <label for="">Park Address</label>
        <input type="text" class="form-control" id="address" name= "park_address" placeholder="">
      </div>

      <div class="form-group">
        <label for="">Park Picture URL</label>
        <input type="text" class="form-control" id="picture" name= "picture_URL" placeholder="">
      </div>


      <div class="row">

        <div class="col s6">
          <label>
            <input type="checkbox" name="is_petfriendly" />
            <span>Pet Friendly</span>
          </label>
          <p>
            <label>
              <input type="checkbox" name="baseball_field" />
              <span>Baseball Field</span>
            </label>
          </p>
          <p>
            <label>
              <input type="checkbox" name="basket_court" />
              <span>Basketball Court</span>
            </label>
          </p>
          <p>
            <label>
              <input type="checkbox" name="body_water" />
              <span>Body of Water</span>
            </label>
          </p>

        </div>

        <div class="col s6">
          <p>
            <label>
              <input type="checkbox" name="tennis_court" />
              <span>Tennis Court</span>
            </label>
          </p>
          <p>
            <label>
              <input type="checkbox" name="playground" />
              <span>Playground</span>
            </label>
          </p>
          <p>
            <label>
              <input type="checkbox" name="trail" />
              <span>Trail</span>
            </label>
          </p>
    </form>
    <p></p>
    <button class="btn waves-effect waves-light" type="addPark">Add Parks!
      <i class="material-icons right"></i>
    </button>
    </p>
  </div>
  </div>

  <script src="/js/create.js"></script>

</body>
